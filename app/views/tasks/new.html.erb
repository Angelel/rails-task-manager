<h1>Create a new task</h1>

<form action="/tasks" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Enter the title</label>
  <input type="text" name="task[title]" id="title">
  <label for="details">Enter the details</label>
  <input type="text" name="task[details]" id="details">
  <label for="completed">Enter if completed</label>
  <input type="boolean" name="task[completed]" id="completed">
  <input type="submit" value="Create task">
</form>



